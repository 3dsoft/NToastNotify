{
  "version": "1.0.4-*",
  "description": "Dot Net abstraction of javascript toastr to create toast notification on ASP.NET Core MVC Projects",
  "copyright": "Nabin Karki Thapa",
  "title": "NToastNotify",
  "authors": ["Nabin Kakri Thapa"],
  "dependencies": {
    "Microsoft.AspNetCore.Razor.Tools": {
      "version": "1.0.0-preview2-final",
      "type": "build"
    },
    "Newtonsoft.Json": "9.0.1",
    "toastr": "2.1.1",
    "Microsoft.AspNetCore.Mvc": "1.1.0",
    "Microsoft.Extensions.FileProviders.Embedded": "1.1.0",
    "NETStandard.Library": "1.6.1"
  },
  "tools": {  
    "Microsoft.AspNetCore.Razor.Tools": "1.0.0-preview2-final"
  },
  "frameworks": {
    "netstandard1.6": {
      "imports": [
        "dnxcore50",
        "net451"
      ]
    }
  },
  "buildOptions": {
    "embed": "Views/**/*.cshtml"
  },
  "runtimes": {
    "win7-x86": {}
  },
  "scripts": {
    "postcompile": [
      "dotnet pack --no-build",
      "nuget push %project:Directory%/bin/%compile:Configuration%/%project:Name%.%project:Version%.nupkg 7aefeed3-f197-4d97-a667-96ea6ca74d77 -source https://www.nuget.org/api/v2/package"
    ]
    
    
  }
}