@using Newtonsoft.Json
@using Newtonsoft.Json.Serialization
@using NToastNotify
@using NToastNotify.Helpers
@model ToastNotificationViewModel
<script src="~/NToastNotify/js/dist/@(Model.LibraryName).js"></script>
<script type="text/javascript" language="javascript">
            if (nToastNotify && nToastNotify.@Model.LibraryName) {
                nToastNotify.@(Model.LibraryName).init({
                    firstLoadEvent: 'DOMContentLoaded',
                    globalToastrOptions: @Html.Raw(Model.GlobalOptionJson),
                    messages: @Html.Raw(Model.ToastMessagesJson),
                    responseHeaderKey: '@Model.ResponseHeaderKey',
                    requestHeaderKey: '@Model.RequestHeaderKey'
                });
            };
</script>
